            method: 'POST',
            body: formData
          });

          // Clean up WebSocket and intervals
          if (progressInterval) {
            clearInterval(progressInterval);
          }

          if (response.ok) {
            const result = await response.json();
            if (ws) {
              ws.close();
            }
            
            // Wait for progress to complete before showing success
            setTimeout(() => {
              alert('Files processed successfully using local OCR!');
              files.clear();
              fileList.innerHTML = '';
              updateProcessButton();

              setTimeout(() => {
                window.location.reload();
              }, 500);
            }, 1500);
            
          } else {

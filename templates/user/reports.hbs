    <script> // Enhanced findBiomarkerData function that handles both traditional and "Result format" biomarkers
        window.findBiomarkerData = function(biomarkerName) {
            if (!window.__INITIAL_DATA__ || !window.__INITIAL_DATA__.files) {
                return [];
            }
            
            const biomarkerData = [];
            
            // Generate comprehensive list of possible keys for a biomarker
            function generatePossibleKeys(name) {
                const keys = [
                    name,                                    // Exact match
                    name.toLowerCase(),                      // lowercase
                    name.toUpperCase(),                      // UPPERCASE
                    name.replace(/\s+/g, ''),               // Remove spaces
                    name.replace(/\s+/g, '-'),              // Replace spaces with hyphens
                    name.replace(/\s+/g, '_'),              // Replace spaces with underscores
                ];
                
                // Special handling for common biomarker variations
                if (name.includes('Free T4') || name.includes('T4 Free') || name === 'Free T4') {
                    keys.push('Free T4', 'T4 Free', 'FT4', 'Free-T4', 'T4-Free', 'FreeT4', 'T4Free');
                }
                if (name.includes('Apo-B') || name === 'Apo-B') {
                    keys.push('Apo-B', 'ApoB', 'Apolipoprotein B', 'APOLIPOPROTEIN B', 'Apo B');
                }
                if (name.includes('TSH')) {
                    keys.push('TSH', 'Thyroid Stimulating Hormone', 'ThyroidStimulatingHormone');
                }
                if (name.includes('Testosterone')) {
                    keys.push('Testosterone', 'Total Testosterone', 'TotalTestosterone');
                }
                
                // Add reverse word order for two-word biomarkers
                const words = name.split(' ');
                if (words.length === 2) {
                    keys.push(`${words[1]} ${words[0]}`);
                }
                
                return [...new Set(keys)]; // Remove duplicates
            }
            
            // Search through all files for the biomarker
            window.__INITIAL_DATA__.files.forEach((file, fileIndex) => {
                if (file.labValues && file.testDate) {
                    const possibleKeys = generatePossibleKeys(biomarkerName);
                    let foundData = null;
                    
                    // Try exact key matches first
                    for (const key of possibleKeys) {
                        if (file.labValues[key]) {
                            foundData = file.labValues[key];
                            break;
                        }
                    }
                    
                    // If not found, try partial matching
                    if (!foundData) {
                        const lowerBiomarkerName = biomarkerName.toLowerCase();
                        for (const [key, value] of Object.entries(file.labValues)) {
                            if (key.toLowerCase().includes(lowerBiomarkerName.toLowerCase()) || 
                                lowerBiomarkerName.includes(key.toLowerCase())) {
                                foundData = value;
                                break;
                            }
                        }
                    }
                    
                    if (foundData && foundData.value !== undefined) {
                        // Parse reference range
                        let minRef = null;
                        let maxRef = null;
                        
                        if (foundData.referenceRange) {
                            if (foundData.referenceRange.includes('-')) {
                                const parts = foundData.referenceRange.split('-');
                                if (parts.length === 2) {
                                    minRef = parseFloat(parts[0]);
                                    maxRef = parseFloat(parts[1]);
                                }
                            } else if (foundData.referenceRange.includes('<')) {
                                const match = foundData.referenceRange.match(/[\d.]+/);
                                if (match) {
                                    minRef = 0;
                                    maxRef = parseFloat(match[0]);
                                }
                            }
                        }
                        
                        biomarkerData.push({
                            date: new Date(file.testDate),
                            value: parseFloat(foundData.value),
                            unit: foundData.unit || '',
                            referenceRange: foundData.referenceRange || '',
                            minRef: minRef,
                            maxRef: maxRef,
                            filename: file.originalName || `File ${fileIndex}`
                        });
                    }
                }
            });
            
            // Sort by date (oldest first)
            biomarkerData.sort((a, b) => a.date - b.date);
            return biomarkerData;
        };

        // Enhanced chart initialization function
        function initializeAllBiomarkerCharts() {
            // Find all chart containers
            const allChartContainers = document.querySelectorAll('[id^="biomarker-trend-"]');
            
            allChartContainers.forEach(container => {
                // Extract biomarker name from container ID
                let biomarkerName = container.id
                    .replace('biomarker-trend-', '')
                    .replace('-all', '')
                    .replace('-freq', '');
                
                // Convert hyphenated names back to proper format
                if (biomarkerName.includes('apo-b')) {
                    biomarkerName = 'Apo-B';
                } else if (biomarkerName.includes('freet4')) {
                    biomarkerName = 'Free T4';
                } else if (biomarkerName.includes('t4-free')) {
                    biomarkerName = 'T4 Free';
                } else {
                    // Generic conversion: apo-b-freq → Apo B Freq
                    biomarkerName = biomarkerName
                        .split('-')
                        .map(word => word.charAt(0).toUpperCase() + word.slice(1))
                        .join(' ');
                }
                
                // Create chart if functions are available
                if (typeof createBiomarkerChart !== 'undefined' && typeof findBiomarkerData !== 'undefined') {
                    const data = findBiomarkerData(biomarkerName);
                    if (data && data.length > 0) {
                        createBiomarkerChart(container, biomarkerName);
                    }
                }
            });
        }

        // Initialize charts when everything is ready
        document.addEventListener('DOMContentLoaded', function() {
            // Wait for charts.js to load and DOM to be stable
            setTimeout(function() {
                if (typeof createBiomarkerChart !== 'undefined') {
                    initializeAllBiomarkerCharts();
                } else {
                    // Retry in case charts.js is still loading
                    setTimeout(initializeAllBiomarkerCharts, 1000);
                }
            }, 500);
        });

        console.log("✅ Enhanced biomarker chart system initialized");
    </script>

          // If personal history exists but no family history, highlight family history button
          else if (personalHistoryEntries > 0 && familyHistoryEntries === 0 && familyHistoryBtn) {
              familyHistoryBtn.classList.add('highlight-add-button');
          }

          // Similar logic for other tabs

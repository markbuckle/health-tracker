  <script> // Profile Tab Guidance JavaScript
    class ProfileTabGuide {
        constructor() {
            this.tabOrder = ['Basic Info', 'History', 'Monitoring', 'Lifestyle', 'Meds-Sups'];
            this.completedTabs = this.getCompletedTabs();
            this.init();
        }

        init() {
            this.updateTabStates();
            this.setupEventListeners();
            this.checkGuidanceDismissal();
            this.checkAndShowCompletionModal();
        }

        // Get completed tabs from server data or localStorage
        getCompletedTabs() {
            // You can replace this with actual server data
            // Example: return window.profileData?.completedTabs || [];
            
            // For now, check if data exists for each tab
            const completed = [];
            
            // Check Basic Info completion
            if (this.hasBasicInfo()) {
                completed.push('Basic Info');
            }
            
            // Check History completion
            if (this.hasHistory()) {
                completed.push('History');
            }
            
            // Check Monitoring completion
            if (this.hasMonitoring()) {
                completed.push('Monitoring');
            }
            
            // Check Lifestyle completion
            if (this.hasLifestyle()) {
                completed.push('Lifestyle');
            }
            
            // Check Meds & Sups completion
            if (this.hasMedsAndSups()) {
                completed.push('Meds-Sups');
            }
            
            return completed;
        }

        // Helper methods to check if each section has data
        hasBasicInfo() {
            // Check if basic info fields are filled
            const age = document.getElementById('ageDisplay')?.textContent?.trim();
            const bloodType = document.getElementById('bloodTypeDisplay')?.textContent?.trim();
            return age && age !== '-' && age !== 'Birthdate not added' && 
                  bloodType && bloodType !== '-';
        }

        hasHistory() {
            // Check if any history entries exist
            const personalHistory = document.querySelectorAll('.personal-history-entry').length > 0;
            const familyHistory = document.querySelectorAll('.family-history-entry').length > 0;
            return personalHistory || familyHistory;
        }

        hasMonitoring() {
            // Check if monitoring data exists
            const monitoringEntries = document.querySelectorAll('.monitoring-entry').length > 0;
            return monitoringEntries;
        }

        hasLifestyle() {
            // Check if lifestyle data exists
            const lifestyleEntries = document.querySelectorAll('.lifestyle-entry').length > 0;
            return lifestyleEntries;
        }

        hasMedsAndSups() {
            // Check if meds and supplements data exists
            const medsEntries = document.querySelectorAll('.medsandsups-entry').length > 0;
            return medsEntries;
        }

        updateTabStates() {
            const tabs = document.querySelectorAll('.in-page-link');
            const progressFill = document.getElementById('progressBarFill');
            const progressText = document.getElementById('progressPercentage');
            
            if (!tabs.length) return;
            
            // Calculate progress
            const progress = (this.completedTabs.length / this.tabOrder.length) * 100;
            
            if (progressFill) {
                progressFill.style.width = progress + '%';
            }
            
            if (progressText) {
                progressText.textContent = Math.round(progress) + '%';
            }
            
            // Update tab states
            tabs.forEach((tab, index) => {
                const tabName = tab.getAttribute('data-tab');
                const statusIndicator = tab.querySelector('.tab-status');
                const arrow = tab.querySelector('.completion-arrow');
                
                if (!tabName || !statusIndicator) return;
                
                const isCompleted = this.completedTabs.includes(tabName);
                const isNext = !isCompleted && this.completedTabs.length === index;
                
                // Remove all state classes
                tab.classList.remove('completed', 'next-recommended');
                statusIndicator.classList.remove('completed', 'current', 'pending');
                
                if (isCompleted) {
                    tab.classList.add('completed');
                    statusIndicator.classList.add('completed');
                    statusIndicator.textContent = 'âœ“';
                    if (arrow) arrow.style.display = 'none';
                } else if (isNext) {
                    tab.classList.add('next-recommended');
                    statusIndicator.classList.add('current');
                    statusIndicator.textContent = index + 1;
                    if (arrow) arrow.style.display = 'block';
                } else {
                    statusIndicator.classList.add('pending');
                    statusIndicator.textContent = index + 1;
                    if (arrow) arrow.style.display = 'none';
                }
            });
            
            // Hide guidance banner if all tabs completed
            const banner = document.getElementById('tabGuidanceBanner');
            if (banner && this.completedTabs.length === this.tabOrder.length) {
                banner.style.display = 'none';
            }
            this.updateAddButtonHighlights();
        }

        markTabCompleted(tabName) {
            if (!this.completedTabs.includes(tabName)) {
                this.completedTabs.push(tabName);
                this.updateTabStates();
                
                // Save to server or localStorage
                this.saveCompletedTabs();
                
                // Show celebration or next step guidance
                this.showCompletionFeedback(tabName);
            }
        }

        saveCompletedTabs() {
            // Save to localStorage as fallback
            localStorage.setItem('profileCompletedTabs', JSON.stringify(this.completedTabs));
            
            // TODO: Send to server
            // fetch('/api/profile/update-completion', {
            //     method: 'POST',
            //     headers: { 'Content-Type': 'application/json' },
            //     body: JSON.stringify({ completedTabs: this.completedTabs })
            // });
        }

        showCompletionFeedback(tabName) {
            const nextTabIndex = this.tabOrder.indexOf(tabName) + 1;
            
            if (nextTabIndex < this.tabOrder.length) {
                const nextTab = this.tabOrder[nextTabIndex];
                this.showToast(`Great! Now complete the ${nextTab} section.`);
            } else {
                // All tabs completed - show the special modal instead of just a toast
                this.showProfileCompletionModal();
            }
        }

        showProfileCompletionModal() {

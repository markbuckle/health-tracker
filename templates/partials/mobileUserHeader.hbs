{{!-- templates/partials/mobileUserHeader.hbs --}}
<header id="mobile-header" class="mobile-header">
    <div class="mobile-header-container">
        <!-- Logo on the left -->
        <div class="mobile-header-logo">
            <div class="mobile-header-logo-link">
                <img src="images/logo2.png" loading="lazy" alt="Logo" class="header-logo">
            </div>
        </div>
        
        <div class="nav-connector">
            {{> svg/navConnector}}
        </div>
        
        <!-- Navigation - Always visible, no hamburger menu -->
        <nav class="mobile-nav">
            <a id="Profile-mobile" href="/profile" class="page-link">
                <img loading="lazy" src="images/user.svg" alt="Profile Icon" class="nav-icon">
                <span class="page-link-text-span">Profile</span>
            </a>
            <a id="Upload-mobile" href="/upload" class="page-link">
                <img src="images/file-text.svg" loading="lazy" alt="Upload Icon" class="nav-icon">
                <span class="page-link-text-span">Upload</span>
            </a>
            <a id="Reports-mobile" href="/reports" class="page-link">
                <img src="images/clipboard.svg" loading="lazy" alt="Reports Icon" class="nav-icon">
                <span class="page-link-text-span">Reports</span>
            </a>
            <a id="Insights-mobile" href="/insights" class="page-link">
                <img src="images/layout.svg" loading="lazy" alt="Insights Icon" class="nav-icon">
                <span class="page-link-text-span">Insights</span>
            </a>
            <a id="Chatbot-mobile" href="/chatbot" class="page-link">
                <img src="images/chatbot.svg" loading="lazy" alt="Chatbot Icon" class="nav-icon">
                <span class="page-link-text-span">Ask Reed</span>
            </a>
        </nav>

        <!-- NEW: Mobile logout button -->
        <div class="mobile-logout-container">
            <button class="mobile-logout-button" id="mobileLogoutBtn">
                <img src="images/unlock.svg" loading="lazy" alt="Logout" class="logout-icon">
            </button>
            
            <!-- Logout confirmation dropdown -->
            <div class="logout-confirmation" id="logoutConfirmation">
                <div class="logout-question">
                    {{!-- <span class="logout-question-mark">?</span> --}}
                    <span>Are you sure you want to log out?</span>
                </div>
                <div class="logout-actions">
                    <button class="logout-btn logout-cancel" id="logoutCancel">Cancel</button>
                    <a href="/logout" class="logout-btn logout-confirm" id="logoutConfirm">Log out</a>
                </div>
            </div>
        </div>
    </div>
</header>
    <script> // header scroll animation
        window.addEventListener('scroll', function() {
            const header = document.getElementById('header');
            const headerContainer = document.getElementById('headerContainer');
            const logo = document.getElementById('logo');
            const scrollPosition = window.scrollY;

            if (scrollPosition > 50) { // Adjust this value to control when the animation triggers
                header.classList.add('header-scrolled');
                headerContainer.classList.add('header-container-scrolled');
                logo.classList.add('logo-scrolled');
            } else {
                header.classList.remove('header-scrolled');
                headerContainer.classList.remove('header-container-scrolled');
                logo.classList.remove('logo-scrolled');
            }
        });
    </script>

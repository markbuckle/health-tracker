      // CTA section at the bottom (like your original quote section)
      h('div', {
        key: 'cta-section',
        style: {
          textAlign: 'center',
          marginTop: '3rem',
          paddingTop: '2rem'
        }
      }, [
        h('h3', {
          key: 'cta-title',
          style: {
            fontSize: 'clamp(20px, 4vw, 26px)',
            fontWeight: 600,
            marginBottom: '1.5rem',

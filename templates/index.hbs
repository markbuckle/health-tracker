              h('div', {
                key: 'active-progress-line',
                style: {
                  position: 'absolute',
                  left: sizes.lineLeft,
                  top: 0,
                  width: sizes.lineWidth,
                  height: `${((activeStep + 1) / steps.length) * 100}%`,
                  background: 'linear-gradient(to bottom, transparent 0%, #5a92d4 25%, #7caee6 75%, transparent 100%)',

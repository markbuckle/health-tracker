                style: { 
                  fontSize: 'clamp(14px, 2vw, 16px)',
                  fontWeight: 400,
                  lineHeight: 1.6,
                  color: '#666',
                  fontFamily: 'Poppins-Regular, sans-serif'
                }
              }, step.description)

{
    "version": 2,
    "builds": [
        { 
            "src": "src/index.js", 
            "use": "@vercel/node",
            "config": {
                "maxLambdaSize": "50mb"
            }
        },
        { 
            "src": "api/**/*.js", 
            "use": "@vercel/node"
        },
        { 
            "src": "public/**/*", 
            "use": "@vercel/static"
        }
    ],
    "functions": {
        "src/index.js": {
            "maxDuration": 300
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/src/index.js"
        }
    ],
    "env": {
        "OCR_IMPLEMENTATION": "External",
        "PADDLEOCR_SERVICE_URL": "@paddleocr_service_url",
        "PADDLEOCR_API_KEY": "@paddleocr_api_key"
    }
}
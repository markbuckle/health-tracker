{
    "version": 2,
    "builds": [
        { "src": "src/index.js", "use": "@vercel/node", "config": { "includeFiles": ["package.json", "package-lock.json"] } },
        { "src": "public/**/*", "use": "@vercel/static" }
    ],
    "rewrites": [
        { "source": "/(.*)", "destination": "/src/index.js" }
    ],
    "env": {
        "NODE_ENV": "production"
    },
    "headers": [
        {
            "source": "/public/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}
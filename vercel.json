{
    "version": 2,
    "builds": [
        { 
            "src": "src/index.js", 
            "use": "@vercel/node"
        },
        { 
            "src": "api/**/*.js", 
            "use": "@vercel/node"
        },
        {
            "src": "api/ocr/Dockerfile",
            "use": "@vercel/docker"
        },
        { 
            "src": "public/**/*", 
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/src/index.js"
        }
    ]
}
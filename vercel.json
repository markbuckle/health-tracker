{
    "version": 2,
    "builds": [
        { 
            "src": "api/**/*.js", 
            "use": "@vercel/node",
            "config": {
                "maxDuration": 30
            }
        },
        { 
            "src": "src/index.js", 
            "use": "@vercel/node", 
            "config": { 
                "includeFiles": ["package.json", "package-lock.json"],
                "maxDuration": 30
            } 
        }
    ]
}
{
    "version": 2,
    "builds": [
        { 
            "src": "src/index.js", 
            "use": "@vercel/node", 
            "config": { 
                "includeFiles": ["package.json", "package-lock.json"],
                "maxDuration": 30
            } 
        },
        { 
            "src": "api/**/*.js", 
            "use": "@vercel/node",
            "config": {
                "maxDuration": 30
            }
        },
        {
            "src": "api/ocr/process.py",
            "use": "@vercel/python",
            "config": {
                "maxDuration": 60
            }
        },
        { 
            "src": "public/**/*", 
            "use": "@vercel/static", 
            "config": { 
                "includeFiles": ["package.json", "package-lock.json"] 
            } 
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/src/index.js"
        }
    ],
    "headers": [
        {
            "source": "/public/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}
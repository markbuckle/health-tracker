{
    "version": 2,
    "builds": [
        { 
            "src": "src/index.js", 
            "use": "@vercel/node", 
            "config": { 
                "includeFiles": ["package.json", "package-lock.json"] 
            } 
        },
        { 
            "src": "api/**/*.js", 
            "use": "@vercel/node" 
        },
        {
            "src": "api/ocr/process.py",
            "use": "@vercel/python"
        },
        { 
            "src": "public/**/*", 
            "use": "@vercel/static", 
            "config": { 
                "includeFiles": ["package.json", "package-lock.json"] 
            } 
        }
    ],
    "functions": {
        "api/ocr/process.py": {
            "runtime": "python3.9",
            "maxDuration": 60
        },
        "src/index.js": {
            "maxDuration": 30
        },
        "api/**/*.js": {
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/src/index.js"
        }
    ],
    "headers": [
        {
            "source": "/public/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}
{
    "version": 2,
    "builds": [
        { 
            "src": "api/**/*.js", 
            "use": "@vercel/node",
            "config": {
                "maxDuration": 30
            }
        },
        { 
            "src": "src/index.js", 
            "use": "@vercel/node", 
            "config": { 
                "includeFiles": ["package.json", "package-lock.json"],
                "maxDuration": 30
            } 
        },
        { 
            "src": "public/**/*", 
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/feedback",
            "dest": "/src/index.js"
        },
        {
            "src": "/api/rag/ask",
            "dest": "/api/rag/ask.js"
        },
        {
            "src": "/api/rag/context",
            "dest": "/api/rag/context.js"
        },
        {
            "src": "/((?!api).*)",
            "dest": "/src/index.js"
        }
    ]
}